#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_NAME_LENGTH 50

typedef struct {
    char name[MAX_NAME_LENGTH];
    int age;
    float height;
} Person;

Person *modify_person(Person *p) {
    // Modify the members of the person structure
    p->age += 1;
    p->height += 0.5;
    // Add 1 to the first character of the name
    p->name[0]++;

    // Return a pointer to the modified person structure
    return p;
}

int main() {
    // Allocate memory for a person structure
    Person *p = malloc(sizeof(Person));

    // Initialize the person structure
    strcpy(p->name, "John");
    p->age = 25;
    p->height = 170.0;

    // Print the original person structure
    printf("Original person:\n");
    printf("Name: %s\n", p->name);
    printf("Age: %d\n", p->age);
    printf("Height: %.1f\n", p->height);

    // Call the modify_person function to modify the person structure
    modify_person(p);

    // Print the modified person structure
    printf("Modified person:\n");
    printf("Name: %s\n", p->name);
    printf("Age: %d\n", p->age);
    printf("Height: %.1f\n", p->height);

    // Free the allocated memory
    free(p);

    return 0;
}